<%# Newly Released %>

<div class="py-4 px-6 mb-6">
  <h3 class="mb-3 font-rowdies text-4xl text-accent-400 font-bold">
    Newly Released
  </h3>

  <div class="flex space-x-8 scrollable bar pb-2">
    <% @songs.each do |song| %>
      <div>
        <div class="rounded-lg w-72 h-72" style="background: no-repeat center/cover url(<%= song.cover_image_url %>);"> 
          <div 
            class="h-full w-full gradient relative rounded-lg"
            style="--gradient-from-color: <%= hex_color_to_rgba(song.color, 0.67) %>; --gradient-to-color: <%= hex_color_to_rgba("#000000", 0.2) %>;"
          >
          <div class="w-full p-4 absolute bottom-0 text-lg font-medium rounded-b-lg" style="background-color: <%= song.color %>;">
            <p class="overflow-hidden whitespace-nowrap text-ellipsis">
            <abbr class="no-underline border-none" style="color: <%= text_color_from_bg(song.color) %>;" title="<%= song.title %>">
              <%= song.title %>
            </abbr>
            </p>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="py-4 px-6 mb-6">
  <h3 class="mb-3 font-rowdies text-4xl text-accent-400 font-bold">
    Genres
  </h3>
  <div class="flex space-x-8 scrollable pb-2">
    <% @genres.each do |genre| %>
      <div>
        <div class="rounded-lg w-72 h-72" style="background: no-repeat center/cover url(<%= genre.cover_image_url %>);"> 
          <div 
            class="h-full w-full gradient relative rounded-lg"
            style="--gradient-from-color: <%= hex_color_to_rgba(genre.color, 0.67) %>; --gradient-to-color: <%= hex_color_to_rgba("#000000", 0.2) %>;"
          >
          <div class="w-full p-4 absolute bottom-0 text-lg font-medium rounded-b-lg" style="background-color: <%= genre.color %>;">
            <p class="overflow-hidden whitespace-nowrap text-ellipsis">
            <abbr class="no-underline border-none" style="color: <%= text_color_from_bg(genre.color) %>;" title="<%= genre.title %>">
              <%= genre.title %>
            </abbr>
            </p>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<br>
<br>



<% if @playlists.present? %>
  <div class="py-4 px-6">
    <h3 class="mb-3 font-rowdies text-4xl text-accent-400 font-bold">
      Top Playlists
    </h3>
  </div>
<% end %>

